{% extends "base.jinja2" %}
{% block content %}
  <div class="content-section col-12 col-md-6 col-lg-4">
    <form action="" method="post">
      {{ form.hidden_tag()}}
      <fieldset class="from-group">
        <legend>
          What do you think?
        </legend>
        <div class='mb-3'>
          {{ form.title.label(class='form-label')}}
          {% if form.title.errors %}
            {{ form.title(class='form-control')}}
            <div class='invalid-feedback d-block'>
              {% for error in form.title.errors %}<span>{{ error }}</span>{% endfor %}
            </div>
          {% else %}
            {{ form.title(class='form-control')}}
          {% endif %}
        </div>
        <div class='mb-3'>
          {{ form.content.label(class='form-label')}}
          {% if form.content.errors %}
            {{ form.content(class='form-control submit-new-post')}}
            <div class='invalid-feedback d-block'>
              {% for error in form.content.errors %}<span>{{ error }}</span>{% endfor %}
            </div>
          {% else %}
            {{ form.content(class='form-control submit-new-post')}}
          {% endif %}
        </div>
      </fieldset>
      <div class='mb-3'>{{ form.submit(class='btn btn-primary')}}</div>
    </form>
  </div>
{% endblock content %}
